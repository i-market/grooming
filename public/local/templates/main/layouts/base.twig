{% set logo_label = 'Грумелье' %}
<header class="header">
    <div class="wrap">
        <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <a class="logo" href="{{ path('/') }}" title="{{ logo_label }}"></a>
        {{ header.menu }}
        <div class="header_info">
            {# TODO search #}
            <form action="" method="post" id="" class="search_form">
                <input type="text" placeholder="Поиск">
                <button type="submit"></button>
            </form>
            {{ header.phone_fragment }}
            <span class="re_call btn" data-modal="re_call">Обратный звонок</span>
            <span class="open_form"></span>
        </div>
    </div>
</header>
<!-- CONTENT START -->
<main class="content">
    {{ page }}
</main>
<!-- FOOTER START -->
<footer class="footer">
    <div class="wrap">
        <div class="top">
            <div class="logo">
                <a href="{{ path('/') }}">
                    <img src="{{ asset('images/logo.png') }}" alt="{{ logo_label }}">
                </a>
            </div>
            {{ footer.about_us }}
            {{ footer.menu }}
            {{ footer.contact }}
        </div>
        <div class="bottom">Copyright {{ copyright_year }} © Grumilier.ru - Груминг, гостиница, магазин для животных. Создание и продвижение сайта: i-Market</div>
    </div>
</footer>
<!--Модалки-->
<!--Обратный звонок-->
<div class="modal" id="re_call">
    <form class="block" method="post" action="" name="" id="">
        <span class="close"></span>
        <strong>Заказать звонок</strong>
        <input type="text" placeholder="ФИО">
        <input type="text" placeholder="Телефон">
        <textarea placeholder="Сообщение"></textarea>
        <div class="bottom">
            <button>Отправить</button>
        </div>
    </form>
</div>
<!-- ПОДКЛЮЧЕНИЕ СКРИПТОВ START -->
{% for path in scripts %}
    <script type="text/javascript" src="{{ path }}"></script>
{% endfor %}
