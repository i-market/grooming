<div class="block">
    {% for item in result.ITEMS %}
        {% set link = path('grooming/' ~ item.CODE) %}
        {% set icon = item.DISPLAY_PROPERTIES.ICON.FILE_VALUE %}
        {% set is_even = loop.index is even %}
        {% set order = is_even ? ['right', 'left'] : ['left', 'right'] %}
        <div class="item{{ is_even ? ' even' }}" id="{{ add_editing_actions(item, template) }}">
            {% for column in order %}
                {% if column == 'left' %}
                    <div class="left">
                        <div class="img" style="background-image: url('{{ item.PREVIEW_PICTURE.RESIZED.src }}');" title="{{ item.PREVIEW_PICTURE.ALT }}"></div>
                    </div>
                {% elseif column == 'right' %}
                    <div class="right">
                        <a href="{{ link }}" class="inner">
                            <span class="title">{{ item.NAME }}</span>
                            <span class="ico">
                                <img src="{{ icon.SRC }}" aria-hidden="true">
                            </span>
                            <span class="text editable-area">
                                {{ item.PREVIEW_TEXT }}
                            </span>
                            <span class="link">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endfor %}
</div>